<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="net.calebscode.langforge.app.lexicon.controller.LexiconController"
	xmlns:fx="http://javafx.com/fxml"
	style="-fx-padding: 5px"
	spacing="5">
	<VBox fillWidth="true" spacing="3">
		<Button text="Add Word" onAction="#onAddWordClicked">
			<maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
		</Button>
		<Button text="Add Lexical Category" onAction="#onAddLexicalCategoryClicked">
			<maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
		</Button>
		<Button text="Remove Lexical Category" onAction="#onRemoveLexicalCategoryClicked">
			<maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
		</Button>
	</VBox>
	<TableView fx:id="wordsTable" HBox.hgrow="ALWAYS" editable="true">
		<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY_NEXT_COLUMN"/></columnResizePolicy>
		<columns>
			<TableColumn fx:id="wordColumn" text="Word" minWidth="100" />
			<TableColumn fx:id="categoryColumn" text="Category" minWidth="100" editable="true" />
			<TableColumn fx:id="definitionColumn" text="Definition" minWidth="100" />
		</columns>
	</TableView>
</fx:root>
