<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="net.calebscode.langforge.app.phonology.controller.PhonologicalRuleManagementController"
	xmlns:fx="http://javafx.com/fxml"
	AnchorPane.topAnchor="0"
	AnchorPane.bottomAnchor="0"
	AnchorPane.leftAnchor="0"
	AnchorPane.rightAnchor="0">
	
	<!-- New Rule Button -->
	<HBox VBox.vgrow="NEVER" spacing="5">
		<Button fx:id="newRuleButton" text="New Rule" onAction="#addNewRule" />
	</HBox>

	<!-- Rules Table -->
	<TableView fx:id="rulesTable" VBox.vgrow="ALWAYS" editable="true">
		<maxHeight><Double fx:constant="MAX_VALUE" /></maxHeight>
		<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY_NEXT_COLUMN"/></columnResizePolicy>
		<columns>
			<TableColumn fx:id="ruleNameColumn" text="Name" editable="true" minWidth="100" />
			<TableColumn fx:id="ruleSourceColumn" text="Rule" editable="true" minWidth="100" />
			<TableColumn fx:id="ruleStatusColumn" text="Status" editable="false" minWidth="100" />
		</columns>
	</TableView>
</fx:root>
