<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="net.calebscode.langforge.app.phonology.PhonemeEditor" xmlns:fx="http://javafx.com/fxml" orientation="HORIZONTAL">
	<ListView fx:id="phonemesList">

	</ListView>
	<VBox>
		<GridPane hgap="2" vgap="2">
			<VBox.margin>
				<Insets top="2" bottom="2" left="2" right="2" />
			</VBox.margin>
			<Label text="Feature" GridPane.rowIndex="0" GridPane.columnIndex="0" />
			<ChoiceBox fx:id="featureNameSelect" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="1e308" />
			<Label text="Value" GridPane.rowIndex="1" GridPane.columnIndex="0" />
			<ChoiceBox fx:id="featureValueSelect" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="1e308" />

			<Button fx:id="addFeatureButton" text="Add" GridPane.rowIndex="2" GridPane.columnIndex="0"
				GridPane.rowSpan="1" GridPane.columnSpan="2" maxWidth="1e308"
				onMouseClicked="#addFeatureButtonClicked" />
		</GridPane>
		<Separator orientation="HORIZONTAL"/>
		<TableView fx:id="featuresTable">
			<columns>
				<TableColumn fx:id="featureNameColumn" text="Feature" />
				<TableColumn fx:id="featureValueColumn" text="Value" />
				<TableColumn fx:id="featureDeleteColumn" text="" />
			</columns>
		</TableView>
	</VBox>
</fx:root>
